<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rename_card"
    android:paddingTop="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rename_title"
        android:text="重命名"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:textColor="@color/black"/>
    <TextView
        android:text="输入新名称"
        android:id="@+id/rename_title_small"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginVertical="10dp"
        android:textSize="18dp"/>
    <EditText
        android:textCursorDrawable="@null"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/editText"
        android:background="@drawable/input_edit"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="8dp"
        android:textSize="18dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="15dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/delete_folder"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="删除"
            android:textColor="@color/unselected_gray"
            android:textStyle="bold"
            android:visibility="gone"
            android:background="@drawable/cancel_btn"/>
        <Button
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="15dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/cancle"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="取消"
            android:textColor="@color/unselected_gray"
            android:textStyle="bold"
            android:background="@drawable/cancel_btn"/>
        <Button
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="15dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:id="@+id/confirm"
            android:text="确定"
            android:textColor="@color/selected_white"
            android:textStyle="bold"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:background="@drawable/confirm_login_btn"/>
    </LinearLayout>

</LinearLayout>