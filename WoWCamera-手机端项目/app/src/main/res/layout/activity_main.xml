<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:context=".MainActivity">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bg_layout"
            android:layout_width="800dp"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent">
            <ImageView
                android:layout_width="800dp"
                android:layout_height="match_parent"
                android:id="@+id/wallpaper_iv"
                app:layout_constraintLeft_toLeftOf="parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bg"/>
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="172dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="570dp"
                android:layout_marginBottom="1300dp"
                android:text="'"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wallpaper_iv" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageButton
            android:id="@+id/cameraBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/main_btn"
            android:padding="15dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:srcCompat="@drawable/camera"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <ImageButton
            android:id="@+id/albumBtn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/main_btn"
            android:padding="15dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:srcCompat="@drawable/album" />

        <ImageButton
            android:id="@+id/mainMenu"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/main_menu"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:scaleType="fitStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/menu" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:background="#E0E0E0"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:paddingTop="50dp">
        <ImageView
            android:id="@+id/userHead"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/userName"
            android:textColor="#515151"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="未登录"
            android:textSize="20sp"
            android:background="@drawable/login_btn"
            android:textAlignment="center"
            android:textColor="#515151"
            android:textStyle="normal"
            android:layout_gravity="center"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="5dp"
            android:layout_height="2dp"
            android:background="#515151"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/change_wall_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="8dp">
            <ImageView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/change_wall"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_set"/>
            <TextView
                android:layout_margin="5dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/change_wall"
                app:layout_constraintBottom_toBottomOf="@+id/change_wall"
                app:layout_constraintLeft_toRightOf="@id/change_wall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#515151"
                android:textSize="15dp"
                android:text="更换壁纸"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/default_wall_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="8dp">
            <ImageView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/default_wall"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_pic"/>
            <TextView
                android:layout_margin="5dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/default_wall"
                app:layout_constraintBottom_toBottomOf="@+id/default_wall"
                app:layout_constraintLeft_toRightOf="@id/default_wall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#515151"
                android:textSize="15dp"
                android:text="默认壁纸"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/see_guide_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="8dp">
            <ImageView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/see_guide"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_guide"/>
            <TextView
                android:layout_margin="5dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/see_guide"
                app:layout_constraintBottom_toBottomOf="@+id/see_guide"
                app:layout_constraintLeft_toRightOf="@id/see_guide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#515151"
                android:textSize="15dp"
                android:text="查看引导"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/feedbackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="8dp">
            <ImageView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/feedback"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_feeds"/>
            <TextView
                android:layout_margin="5dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/feedback"
                app:layout_constraintBottom_toBottomOf="@+id/feedback"
                app:layout_constraintLeft_toRightOf="@id/feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#515151"
                android:textSize="15dp"
                android:text="联系我们"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/favorBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="8dp">
            <ImageView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/favor"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_good"/>
            <TextView
                android:layout_margin="5dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/favor"
                app:layout_constraintBottom_toBottomOf="@+id/favor"
                app:layout_constraintLeft_toRightOf="@id/favor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#515151"
                android:textSize="15dp"
                android:text="好评支持"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/logoutBtn"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="8dp">
            <ImageView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/logout"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/logout"/>
            <TextView
                android:layout_margin="5dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@id/logout"
                app:layout_constraintBottom_toBottomOf="@+id/logout"
                app:layout_constraintLeft_toRightOf="@id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#515151"
                android:textSize="15dp"
                android:text="注销"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>