<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/whole_layout">

    <LinearLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/muti_toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp"
        android:background="@drawable/backgroud_card"
        android:paddingBottom="40dp">


        <TextView
            android:id="@+id/fName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/label_card"
            android:textColor="@color/selected_white" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerviewFps"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_500"
        android:text="*图片已按照AI美学评价结果自动排序"/>
    <androidx.appcompat.widget.Toolbar
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/muti_toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingVertical="10dp"
        android:paddingHorizontal="30dp"
        android:orientation="horizontal"
        android:background="@color/gray_100">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/delete_muti"
                app:layout_constraintBottom_toTopOf="@id/cancel_tv"
                android:layout_width="0dp"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="30dp"
                android:id="@+id/cancel_muti"
                android:src="@drawable/cancel"/>
            <TextView
                android:id="@+id/cancel_tv"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/cancel_muti"
                app:layout_constraintRight_toRightOf="@+id/cancel_muti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textColor="#515151"/>
            <ImageView
                app:layout_constraintLeft_toRightOf="@id/cancel_muti"
                app:layout_constraintRight_toLeftOf="@+id/aiPoem"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/delete_tv"
                android:layout_width="0dp"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="30dp"
                android:id="@+id/delete_muti"
                android:src="@drawable/delete_album2"/>
            <TextView
                android:id="@+id/delete_tv"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/delete_muti"
                app:layout_constraintRight_toRightOf="@+id/delete_muti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:textColor="#515151"/>

            <ImageView
                android:visibility="gone"
                app:layout_constraintLeft_toRightOf="@+id/delete_muti"
                app:layout_constraintRight_toLeftOf="@id/share"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/ai_poem_iv"
                android:layout_width="0dp"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="30dp"
                android:id="@+id/aiPoem"
                android:src="@drawable/ai_poem"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/ai_poem_iv"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/aiPoem"
                app:layout_constraintRight_toRightOf="@+id/aiPoem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI诗人"
                android:textColor="#515151"/>
            <ImageView
                app:layout_constraintLeft_toRightOf="@+id/aiPoem"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/share_tv"
                android:layout_width="0dp"
                app:layout_constraintHorizontal_weight="1"
                android:layout_height="30dp"
                android:src="@drawable/share"
                android:id="@+id/share"/>
            <TextView
                android:id="@+id/share_tv"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/share"
                app:layout_constraintRight_toRightOf="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:textColor="#515151"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addPhotoInFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#016cff"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/muti_toolbar"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/ic_add_big"
        app:maxImageSize="30dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>