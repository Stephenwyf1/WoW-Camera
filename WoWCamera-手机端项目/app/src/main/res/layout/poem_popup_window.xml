<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popwindow_background"
    android:layout_margin="50dp"
    android:paddingTop="20dp">

    <TextView
        android:id="@+id/title_tv"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="AI作诗"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"/>
    <EditText
        android:id="@+id/poem_edit"
        android:gravity="start"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintHeight_percent="0.6"
        android:background="@drawable/input_edit"
        android:textIsSelectable="true"
        app:layout_constraintTop_toBottomOf="@+id/title_tv"
        app:layout_constraintBottom_toTopOf="@+id/close_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/close_btn"
        android:layout_height="50dp"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintTop_toBottomOf="@+id/poem_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/copy_btn"
        android:text="关闭"
        android:textColor="@color/unselected_gray"
        android:textStyle="bold"
        android:background="@drawable/cancel_btn"
        android:layout_marginBottom="20dp"/>
    <Button
        android:id="@+id/copy_btn"
        android:layout_height="50dp"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintTop_toTopOf="@id/close_btn"
        app:layout_constraintBottom_toBottomOf="@id/close_btn"
        app:layout_constraintLeft_toRightOf="@id/close_btn"
        app:layout_constraintRight_toRightOf="parent"
        android:text="复制"
        android:textColor="@color/selected_white"
        android:textStyle="bold"
        android:background="@drawable/confirm_login_btn"/>
</androidx.constraintlayout.widget.ConstraintLayout>