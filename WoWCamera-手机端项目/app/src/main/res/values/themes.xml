<resources xmlns:tools="http://schemas.android.com/tools">
<!-- Base application theme. -->
<style name="Theme.Animator" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/blue_login_deep</item>
    <item name="colorPrimaryVariant">@color/blue_login_deep</item>
    <item name="colorOnPrimary">@color/white</item>
    <!-- Secondary brand color. -->
    <item name="colorSecondary">@color/gray_500</item>
    <item name="colorSecondaryVariant">@color/teal_700</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    <!-- Customize your theme here. -->
    <item name="windowNoTitle">true</item>
</style>
<style name="AlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert.Bridge">
    <item name="colorControlActivated">@color/blue_500</item>
    <item name="colorAccent">@color/blue_500</item>
</style>
<style name="process_tab_text" parent="TextAppearance.Design.Tab">
    <item name="android:textSize">12sp</item>
</style>
</resources>